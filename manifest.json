{
	"manifest_version": 2,
	"name": "minexmr.com stats",
	"version": "1.2.2",

	"homepage_url": "https://github.com/chaueq/minexmr_stats",

	"applications": {
		"gecko": {
			"id": "minexmr_stats@chaueq"
		}
	},

	"permissions": ["storage"],

	"icons": {
		"48": "icons/48.png",
		"96": "icons/96.png"
	},
	
	"browser_action": {
		"default_icon": "icons/48.png",
		"default_title": "minexmr.com statistics",
		"default_popup": "stats.html"
	},
	
	"options_ui": {
		"page": "settings.html"
	}
}

